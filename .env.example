# ===========================================
# xolinks.me Environment Variables
# ===========================================

# App
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://xolinks:xolinks_dev_password@localhost:5432/xolinks

# Redis
REDIS_URL=redis://:xolinks_redis_password@localhost:6379

# Session Secret (min 32 characters)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-change-this-in-production-min-32-chars

